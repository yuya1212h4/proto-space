.container
  = form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: 'form-signin'}) do |f|
    %h2.form-signin-heading Please sign in
    = f.label :email, class: 'sr-only', id: "inputEmail"
    = f.email_field :email, autofocus: "", placeholder: "Email address", required: "", class: 'form-control', id: 'inputEmail'
    = f.label :password, class: 'sr-only', id: 'inputPassword'
    = f.password_field :password, placeholder: "Password", required: "", class: 'form-control', id: 'inputPassword'
    .checkbox
      %label
        = f.check_box :remember_me
        Remember me
    = f.submit 'Sign in', class: "btn btn-lg btn-primary btn-block"
  .text-center
    %p
      Not a member?
      = link_to "Sign up now", new_user_registration_path
