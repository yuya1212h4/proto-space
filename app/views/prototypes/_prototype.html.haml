.col-sm-4.col-md-3.proto-content
  - if user_signed_in? && current_user.id == prototype.user_id
    %li.dropdown.drop_menu_location
      %a.dropdown-toggle{'aria-expanded': 'false', 'data-toggle': 'dropdown', class: 'dropdown-toggle', role: 'button'}
        = button_tag 'Action', class: 'btn btn-default dropdown-toggle'
      %ul.dropdown-menu{role: "menu"}
        %li= link_to 'Edit', edit_prototype_path(prototype)
        %li= link_to 'Delete', prototype_path(prototype), method: :delete
  .thumbnail
    = link_to prototype_path(prototype) do
      = image_tag prototype.main_prototype_image
      .caption
        %h3= prototype.title
        .proto-meta
          .proto-user
            = link_to "#{prototype.user.name}", user_path(prototype.user)
          .proto-posted
            = I18n.l prototype.created_at, format: :monthday
        %ul.proto-tag-list.list-inline
          %li
            = link_to "iPad", "#", class: "btn btn-default"
